<h1>Edit Stories</h1>

<div class="row">
    <form class="col s12" action="/stories/{{story.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input placeholder="Title" type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">UnPublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <label for="filled-in-box">
                <input type="checkbox" class="filled-in" {{#if story.allowedComments}} checked="checked" {{/if}}
                    name="allowedComments" id="filled-in-box" />
                <span>Allow Comments</span>
            </label>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>