<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.id ../user.id id}}} 
                {{!-- Triple curly braces as this function returns json ,
                ../user.id refers to req.user.id (GLOBAL USER) --}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{stripTags (truncate body 350)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="Contact Person">
                    <a href = "/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <div class="btn grey">
                    <a href="/stories/show/{{id}}" class="white-text">Read More</a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <h4>No Stories Found</h4>
    {{/each}}
</div>